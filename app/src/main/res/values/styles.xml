<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/red</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:windowBackground">@color/background</item>
        <item name="android:textColor">@color/textColor</item>
    </style>

    <style name="ListView" parent="Widget.AppCompat.ListView.Menu">
        <item name="android:divider">#b22222</item>
        <item name="android:dividerHeight">3px</item>
        <item name="android:headerDividersEnabled">false</item>
    </style>

    <style name="AppTextColor">
        <item name="android:textColor">@color/textColor</item>
    </style>

</resources>
